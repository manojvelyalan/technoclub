{% extends "templates/app.twig"%}

 {% block content %}
<!-- Main Section -->
    <section id="main">
        <div class="breadcrumb-wrapper">
            <div class="pattern-overlay">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-xs-12 col-sm-6">
                            <h2 class="title">Contact</h2>
                        </div>
                        <div class="col-lg-6 col-md-6 col-xs-12 col-sm-6">
                            <div class="breadcrumbs pull-right">
                                <ul>
                                    <li>You are Now on:</li>
                                    <li><a href="{{path_for('home')}}">Home</a></li>                                          
                                    <li>Contact</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
<!-- Main Content -->
                <div class="content margin-top60 margin-bottom60">
                    <div class="container">
                        <div class="row">
                            <!-- Contact Form -->
                            <div class="col-lg-8 col-md-8 col-sm-6 col-xs-12" id="contact-form">
                                <h2>Send Us an Email</h2>
                                
                                {% include 'templates/partial/flash.twig'%}
                                {% if flash.getMessage('mailsuccess') == "" %}
                                 <form method="post" action="{{path_for('contact')}}">
                                    <fieldset>
                                        <div class="row">
                                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                <input class="form-control {{(errors.name) ? 'input-error-border' : '' }}" id="name" name="name" type="text" placeholder="Name" value="{{old.name}}" >
                                            </div>
                                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                <input class="form-control {{(errors.email) ? 'input-error-border' : '' }}" type="text" id="email" name="email" placeholder="Email" value="{{old.email}}">
                                            </div>
                                        </div>
                                        
                                        <div class="row">
                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                <textarea class="form-control {{(errors.message) ? 'input-error-border' : '' }}" id="text" name="message" rows="3" cols="40" placeholder="Message">{{old.message}}</textarea>
                                            </div>
                                        </div>
                                    </fieldset>
                                    <button class="btn btn-color submit pull-right" type="submit">Send</button>
                                    <div class="clearfix">
                                    </div>
                                    {{csrf.feilds | raw }}
                                    {% endif %}
                                </form>
                            </div>
                            <!-- /Contact Form -->
                            <div class="col-lg-4 col-md-4 col-xs-12 col-sm-6">
                                <div class="address widget">
                                    <h3 class="title">Head Office</h3>
                                    <ul class="contact-us">
                                        <li>
                                            <i class="fa fa-map-marker"></i>
                                            <p>
                                                <strong class="contact-pad">Address:</strong> 20926 SE 22nd Pl <br> Sammamish, WA98029 
                                            </p>
                                        </li>
                                        <li>
                                            <i class="fa fa-phone"></i>
                                            <p>
                                                <strong>Phone:</strong> (206) 552-9572
                                            </p>
                                        </li>
                                        <li>
                                            <i class="fa fa-envelope"></i>
                                            <p>
                                                <strong>Email:</strong><a href="mailto:technosmartkids@outlook.com">technosmartkids@outlook.com</a>
                                            </p>
                                        </li>
                                    </ul>
                                </div>
                                
                                <div class="follow widget">
                                    <h3 class="title">Follow Us</h3>
                                    <div class="member-social dark">
                                        <a class="facebook" href="https://www.facebook.com/technosmartkids/" target="_blank"><i class="fa fa-facebook"></i></a>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                       
                       
                    </div>
                </div>
                <!-- /Main Content -->
                
 {% endblock %}