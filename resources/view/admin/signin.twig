<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Techno Smart Kids Admin - Login</title>

  <!-- Custom fonts for this template-->
  <link href="{{base_url()}}/admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

  <!-- Custom styles for this template-->
  <link href="{{base_url()}}/admin/css/sb-admin.css" rel="stylesheet">

</head>

<body class="bg-dark">

  <div class="container">
  
    <div class="card card-login mx-auto mt-5">
      <div class="card-header">Login</div>
      <div class="card-body">
      {% include 'admin/templates/partial/flash.twig'%} 
        <form method="post" action="{{path_for('adminsignin')}}">
          <div class="form-group">
            <div class="form-label-group">
              <input type="email" id="inputEmail" class="form-control {{errors.email ? ' border-danger':''}}" placeholder="Email address"  name="email"  value="{{old.email}}">
              <label for="inputEmail">Email address</label>
              <span class="text-danger align-middle">
                            {% if errors.email %}
                            {{errors.email | first}}
                            {% endif %}
                        </span>
            </div>
          </div>
          <div class="form-group">
            
                <div class="form-label-group">
                  <input type="password" id="inputPassword" class="form-control {{errors.password ? ' border-danger':''}}" placeholder="Password"  name="password">
                  <label for="inputPassword">Password</label>
                  <span class="text-danger align-middle">
                            {% if errors.password %}
                            {{errors.password | first}}
                            {% endif %}
                        </span>
                </div>
           </div>
          <div class="form-group">
            <div class="checkbox">
              <label>
                <input type="checkbox" value="remember-me">
                Remember Password
              </label>
            </div>
          </div>
          <button type="submit" name="register" class="btn btn-primary btn-block" >Login</button>
           {{csrf.feilds | raw}}
          
        </form>
        <!-- <div class="text-center">
          <a class="d-block small mt-3" href="{{path_for('adminsignup')}}">Register an Account</a>
         <a class="d-block small" href="forgot-password.html">Forgot Password?</a>
        </div>-->
      </div>
    </div>
  </div>

  <!-- Bootstrap core JavaScript-->
  <script src="{{base_url()}}/admin/vendor/jquery/jquery.min.js"></script>
  <script src="{{base_url()}}/admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Core plugin JavaScript-->
  <script src="{{base_url()}}/admin/vendor/jquery-easing/jquery.easing.min.js"></script>

</body>

</html>
